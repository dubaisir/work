{
    "job": { 
        "setting": {
            "speed": {
                "channel": 5
            },
                "errorLimit":{
                "record":0,
                "percentage":0
            }
        },
        "content": [
            {
                "reader": {
                    "name": "mysqlreader",
                    "parameter": {
                        "username": "${SRC_MYSQL_SYSMARTBI_USR}",
                        "password": "${SRC_MYSQL_SYSMARTBI_PWD}",
                        "connection": [
                            {
                                "querySql": [
                                    "select  
                                         id, 
                                         project_id, 
                                         traffice_flow, 
                                         user_code, 
                                         remark, 
                                         biz_date, 
                                         create_time, 
                                         update_time, 
                                         '${CURRENT_FLOW_START_DAY}',
                                         ${EXECUTION_ID} 
                                    from nyuwa.traffic_flow"
                                ],
                                "jdbcUrl": [
                                    "${SRC_MYSQL_SYSMARTBI_URL}"
                                ]
                            }
                        ]
                    }
                },
                "writer": {
                    "name": "hdfswriter",                              
                    "parameter": { 
                        "column": [
                            {
                                "name": "id",
                                "type": "int"
                            },

                            {
                                "name": "project_id",
                                "type": "string"
                            },

                            {
                                "name": "traffice_flow",
                                "type": "int"
                            },

                            {
                                "name": "user_code",
                                "type": "string"
                            },

                            {
                                "name": "remark",
                                "type": "string"
                            },

                            {
                                "name": "biz_date",
                                "type": "string"
                            },

                            {
                                "name": "create_time",
                                "type": "string"
                            },

                            {
                                "name": "update_time",
                                "type": "string"
                            },
                            {
                                "name": "op_time",
                                "type": "string"
                            },
                            {
                                "name": "execution_id",
                                "type": "string"
                            }
                        ],
                        "defaultFS": "${HDFS_ROOT_URI}",
                        "fieldDelimiter": "\t",
                        "fileName": "traffic_flow",
                        "fileType": "orc",
                        "path": "${HDFS_HV_EXTTB_ROOT}/${HIVE_DB_ODS_DIM}/traffic_flow/load_date=${CURRENT_FLOW_START_DAY}",
                        "writeMode": "append"
                    },
                    "extendScript": {
                        "post": [
                            {
                                "type":"hql",
                                "script":"ALTER TABLE ${HIVE_DB_ODS_DIM}.traffic_flow ADD IF NOT EXISTS PARTITION(load_date='${CURRENT_FLOW_START_DAY}')"
                            }
                        ]
                    }
                }
            }
        ]
    }
}