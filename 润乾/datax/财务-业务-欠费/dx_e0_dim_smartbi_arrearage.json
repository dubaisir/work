{
    "job": { 
        "setting": {
            "speed": {
                "channel": 5
            },
                "errorLimit":{
                "record":0,
                "percentage":0
            }
        },
        "content": [
            {
                "reader": {
                    "name": "mysqlreader",
                    "parameter": {
                        "username": "${SRC_MYSQL_RD_USR}",
                        "password": "${SRC_MYSQL_RD_PWD}",
                        "connection": [
                            {
                                "querySql": [
                                    "select  
                                         the_month, 
                                         projectname, 
                                         contractno, 
                                         expenditurename, 
                                         pay_time, 
                                         pay_amt, 
                                         accepted_amt, 
                                         create_time, 
                                         update_time, 
                                         '${CURRENT_FLOW_START_DAY}',
                                         ${EXECUTION_ID} 
                                    from raqsoft.smartbi_arrearage"
                                ],
                                "jdbcUrl": [
                                    "${SRC_MYSQL_RD_URL}"
                                ]
                            }
                        ]
                    }
                },
                "writer": {
                    "name": "hdfswriter",                              
                    "parameter": { 
                        "column": [
                            {
                                "name": "the_month",
                                "type": "string"
                            },

                            {
                                "name": "projectname",
                                "type": "string"
                            },

                            {
                                "name": "contractno",
                                "type": "string"
                            },

                            {
                                "name": "expenditurename",
                                "type": "string"
                            },

                            {
                                "name": "pay_time",
                                "type": "string"
                            },

                            {
                                "name": "pay_amt",
                                "type": "double"
                            },

                            {
                                "name": "accepted_amt",
                                "type": "double"
                            },

                            {
                                "name": "create_time",
                                "type": "string"
                            },

                            {
                                "name": "update_time",
                                "type": "string"
                            },
                            {
                                "name": "op_time",
                                "type": "string"
                            },
                            {
                                "name": "execution_id",
                                "type": "string"
                            }
                        ],
                        "defaultFS": "${HDFS_ROOT_URI}",
                        "fieldDelimiter": "\t",
                        "fileName": "smartbi_arrearage",
                        "fileType": "orc",
                        "path": "${HDFS_HV_EXTTB_ROOT}/${HIVE_DB_ODS_DIM}/smartbi_arrearage/load_date=${CURRENT_FLOW_START_DAY}",
                        "writeMode": "append"
                    },
                    "extendScript": {
                        "post": [
                            {
                                "type":"hql",
                                "script":"ALTER TABLE ${HIVE_DB_ODS_DIM}.smartbi_arrearage ADD IF NOT EXISTS PARTITION(load_date='${CURRENT_FLOW_START_DAY}')"
                            }
                        ]
                    }
                }
            }
        ]
    }
}